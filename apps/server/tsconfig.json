{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "src/modules",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/modules/*"]
    }
  },
  "include": ["src/modules/**/*", "src/app.ts"],
  "exclude": ["node_modules"]
}
